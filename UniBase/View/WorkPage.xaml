<Page x:Name="WorkPageName"
    x:Class="UniBase.View.WorkPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UniBase.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="using:UniBase.ViewModel"
    xmlns:charting="using:WinRTXamlToolkit.Controls.DataVisualization.Charting"
    
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.DataContext>
        <viewModel:WorkViewModel/>
    </Page.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <CommandBar Background="DarkCyan">
            <CommandBar.SecondaryCommands>
                <!--AppBarButton Label="Konto indstillinger" Command="{Binding ShowAccountPopUp}"/-->
                <AppBarButton Label="Log af" Command="{Binding LogOffCommand}"/>
            </CommandBar.SecondaryCommands>
            <AppBarSeparator/>
            <AppBarButton Icon="Help" Label="Help" Command="{Binding GoToHelpPageCommand}"/>
        </CommandBar>

        <Pivot Grid.Row="1" Name="ColumnPivot">
            <PivotItem Header="K2">
                <Pivot>
                    <PivotItem Header="Forside">
                        <StackPanel>
                            <ListView Width="690" Height="42" Style="{StaticResource ButtonListViewStyle}" ItemsSource="{Binding Column_2.FrontPageProps}">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="Padding" Value="0"/>
                                        <Setter Property="Margin" Value="0"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                    </Style>
                                </ListView.ItemContainerStyle>
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <Button Style="{StaticResource ButtonPropertyStyle}" Content="{Binding}" Command="{Binding DataContext.TestCommand, ElementName=WorkPageName}"></Button>
                                            <Line></Line>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                            <ListView Width="690" ItemsSource="{Binding Column_2.FrontpagesList}">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="Padding" Value="0"/>
                                        <Setter Property="Margin" Value="0"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                    </Style>
                                </ListView.ItemContainerStyle>
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBox Width="115" Height="40" Text="{Binding ProcessOrder_No}"></TextBox>
                                            <TextBox Width="115" Height="40" Text="{Binding Date}"></TextBox>
                                            <TextBox Width="115" Height="40" Text="{Binding FinishedProduct_No}"></TextBox>
                                            <TextBox Width="115" Height="40" Text="{Binding Colunm}"></TextBox>
                                            <TextBox Width="115" Height="40" Text="{Binding Note}"></TextBox>
                                            <TextBox Width="115" Height="40" Text="{Binding Week_No}"></TextBox>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </PivotItem>
                    <PivotItem Header="Kontrol regristering">
                        <StackPanel>
                            <ListView Width="690"
                                      Height="42" 
                                      Style="{StaticResource ButtonListViewStyle}" 
                                      ItemsSource="{Binding K2.ControlRegistrationProps}">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="Padding" Value="0"/>
                                        <Setter Property="Margin" Value="0"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                    </Style>
                                </ListView.ItemContainerStyle>
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <Button Style="{StaticResource ButtonPropertyStyle}" Content="{Binding}" Command="{Binding DataContext.TestCommand, ElementName=WorkPageName}"></Button>
                                            <Line></Line>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                            <ListView Width="690" ItemsSource="{Binding ListControl}">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="Padding" Value="0"/>
                                        <Setter Property="Margin" Value="0"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                    </Style>
                                </ListView.ItemContainerStyle>
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBox Width="115" Height="40" Text="{Binding ProcessOrder_No}"></TextBox>
                                            <TextBox Width="115" Height="40" Text="{Binding Date}"></TextBox>
                                            <TextBox Width="115" Height="40" Text="{Binding FinishedProduct_No}"></TextBox>
                                            <TextBox Width="115" Height="40" Text="{Binding Colunm}"></TextBox>
                                            <TextBox Width="115" Height="40" Text="{Binding Note}"></TextBox>
                                            <TextBox Width="115" Height="40" Text="{Binding Week_No}"></TextBox>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </PivotItem>
                    <PivotItem Header="Kontrol skema">
                        
                    </PivotItem>
                    <PivotItem Header="Produktion">

                    </PivotItem>
                    <PivotItem Header="Vagt registering">

                    </PivotItem>
                    <PivotItem Header="TUs">

                    </PivotItem>
                    

                </Pivot>
            </PivotItem>
            <PivotItem Header="K3">

            </PivotItem>
            <PivotItem Header="K4">

            </PivotItem>
            <PivotItem Header="K5">

            </PivotItem>
            <PivotItem Header="Grafer" Visibility="Visible" >
                <StackPanel>
                    <ComboBox Name="SelectGraphCombobox" SelectionChanged="GraphComboboxMethod" PlaceholderText="Vælg Graf">
                        <ComboBoxItem Content="Weight"/>
                        <ComboBoxItem Content="MipMa"/>
                        <ComboBoxItem Content="Lud Koncentration"/>
                    </ComboBox>
                    <TextBlock Name="TbCombobox" Text="{Binding GraphCombobox, Mode=TwoWay}" Visibility="Collapsed"/>
                    <charting:Chart  x:Name="LineChart" HorizontalAlignment="Center" Margin="5" Width="1000" Height="500"  >
                        <charting:LineSeries Title="{Binding GraphCombobox, Mode=TwoWay}" 
                                             IndependentValuePath="Date"
                                             DependentValuePath="SelectedCategory"
                                             ItemsSource="{Binding TrendAdminstrator.TrendList,Mode=TwoWay}"/>
                    </charting:Chart>

                    
                </StackPanel>
                
            </PivotItem>
        </Pivot>
    </Grid>
</Page>
