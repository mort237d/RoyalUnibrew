<Page x:Name="WorkPageName"
    x:Class="UniBase.View.WorkPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UniBase.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="using:UniBase.ViewModel"
    xmlns:charting="using:WinRTXamlToolkit.Controls.DataVisualization.Charting"
    
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.DataContext>
        <viewModel:WorkViewModel/>
    </Page.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <CommandBar Background="DarkCyan">
            <CommandBar.SecondaryCommands>
                <!--AppBarButton Label="Konto indstillinger" Command="{Binding ShowAccountPopUp}"/-->
                <AppBarButton Label="Log af" Command="{Binding LogOffCommand}"/>
            </CommandBar.SecondaryCommands>
            <AppBarSeparator/>
            <AppBarButton Icon="Help" Label="Help" Command="{Binding GoToHelpPageCommand}"/>
        </CommandBar>

        <Pivot Grid.Row="1" Name="ColumnPivot">
            <PivotItem Header="K2">
                <Pivot>
                    <PivotItem Header="Forside">
                        <StackPanel>
                            <ListView Height="42" Style="{StaticResource ButtonListViewStyle}" ItemsSource="{Binding MngTables.FrontPageProps}">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="Padding" Value="0"/>
                                        <Setter Property="Margin" Value="0"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                    </Style>
                                </ListView.ItemContainerStyle>
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <Button Style="{StaticResource ButtonPropertyStyle}" Content="{Binding}" Command="{Binding DataContext.TestCommand, ElementName=WorkPageName}"></Button>
                                            <Line></Line>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                            <ListView ItemsSource="{Binding ListFrontpages}">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBox Text="{Binding Date}"></TextBox>
                                            <TextBox Text="{Binding Column}"></TextBox>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </PivotItem>
                    <PivotItem Header="Kontrol regristering">

                    </PivotItem>
                    <PivotItem Header="Kontrol skema">
                        <ListView ItemsSource="{Binding ListControlScheduleses}" Margin="0,5,0,0" >
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Vertical">
                                        <StackPanel Orientation="Horizontal" Height="auto">
                                            <TextBox PlaceholderText="" Width="100" Text="{Binding Time, Mode=TwoWay}"/>
                                            <TextBox PlaceholderText="" Width="100" Text="{Binding WeightControlTime, Mode=TwoWay}"/>
                                            <TextBox PlaceholderText="" Width="100" Text="{Binding Weight, Mode=TwoWay}"/>
                                            <TextBox PlaceholderText="" Width="100" Text="{Binding ReceiptForTest, Mode=TwoWay}"/>
                                            <TextBox PlaceholderText="" Width="100" Text="{Binding KegTest, Mode=TwoWay}"/>
                                            <TextBox PlaceholderText="" Width="100" Text="{Binding LudKoncentration, Mode=TwoWay}"/>
                                            <TextBox PlaceholderText="" Width="100" Text="{Binding MipMA, Mode=TwoWay}"/>
                                            <TextBox PlaceholderText="" Width="100" Text="{Binding Signature, Mode=TwoWay}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </PivotItem>
                    <PivotItem Header="Produktion">

                    </PivotItem>
                    <PivotItem Header="Vagt registering">

                    </PivotItem>
                    <PivotItem Header="TUs">

                    </PivotItem>
                    

                </Pivot>
            </PivotItem>
            <PivotItem Header="K3">

            </PivotItem>
            <PivotItem Header="K4">

            </PivotItem>
            <PivotItem Header="K5">

            </PivotItem>
            <PivotItem Header="Grafer" Visibility="Visible" >
                <StackPanel>
                    <charting:Chart  x:Name="LineChart" HorizontalAlignment="Center" Margin="5" Width="1000" Height="500"  >
                        <charting:LineSeries Title="SelectedCategory" 
                                             IndependentValuePath="Date"
                                             DependentValuePath="SelectedCategory"
                                             ItemsSource="{Binding TrendAdminstrator.TrendList,Mode=TwoWay}"/>
                    </charting:Chart>

                    <charting:Chart Width="480" >
                        <charting:ColumnSeries Title="" ItemsSource="{Binding StatList.StatList,Mode=TwoWay}" 
                                               IndependentValuePath="ProfitType" 
                                               DependentValuePath="TotalIncome"/>
                    </charting:Chart>
                </StackPanel>
                
            </PivotItem>
        </Pivot>
        <Button Grid.Row="2" Margin="16,16" Height="80" Width="160" VerticalAlignment="Bottom" HorizontalAlignment="Right" Command="{Binding SaveWorkCommand}" Content="Save" FontSize="32" Background="DarkCyan"/>
    </Grid>
</Page>
